

        {{#get "posts" filter="tag:intro"}}
            {{#foreach posts}}
            <div class="bg-light min-h-l d-flex align-items-center" style="background-image: url({{img_url feature_image}}); background-repeat: no-repeat; background-position: center center; background-size: cover">
                <div class="container">
                <div class="row text-center justify-content-center text-light" data-aos="fade-up" data-aos-anchor-placement="bottom-bottom">
                    <div class="col-sm-6 text-center py-5">
                            <h1  data-aos="fade-left">{{title}}</h1>
                            {{content}}
                    </div>
                </div>
                </div>
            </div>
        {{/foreach}}
        {{/get}}