<div class="">
    {{#get "posts" filter="tag:main"}}
        {{#foreach posts}}
        <div class="row no-gutters">
            <div class="col-md-6" data-aos="fade-right">
                <div class="embed-responsive embed-responsive-4by3" style="background-image: url({{img_url feature_image}}); background-repeat: no-repeat; background-position: center center; background-size: cover">
                </div>
            </div>
            <div class="col-md-6 text-center d-flex align-items-center py-5" data-aos="fade-left">
                <div class=" flex-grow-1 ">
                    <p class="mb-0">&lt;{{@site.description}}/&gt;</p>
                    <h1 class="display-4">{{@site.title}}</h1>
                    {{content}}
                </div>
            </div>
        </div>
    {{/foreach}}
    {{/get}}
</div>